<h3 id="userType">all our branches</h3>

<body>
  <table class="table">
      <thead>
        <tr>
          <th scope="col">Branch number</th>
          <th scope="col">City</th>
          <th scope="col">Phone Number</th>
        </tr>
      </thead>
      <tbody id = "table">
          <tr>

          </tr>  
      </tbody>
    </table>


    <script>
      
        $(document).ready(function(){
         loudBranches();

        function loudBranches(){ 
        fetch('/getBranches')
        .then(response=>{
          console.log(response);
          return response.json();
        }).then(data=>{
          console.log(data);   
                var i;      
                for(i = 0; i < data.length; i++){
                    var newRow = table.insertRow(i),
                        number = newRow.insertCell(0),
                        city = newRow.insertCell(1),
                        phone  = newRow.insertCell(2)
                        

                        number.innerHTML = data[i].number;
                        city.innerHTML = data[i].branchCity;
                        phone.innerHTML = data[i].phone;
                }

        })
        .catch(error=>{
          console.log(error);
        });
        };
      });
    </script>
  </body>